{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"rootDir": ".",
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"]
		}
	},
	"include": ["src"],
	"exclude": ["**/*.test.ts", "**/*.spec.ts", "src/__tests__"]
}
